{% import 'components/form/fields_macros.html.twig' as fields %}

{{ fields.largeTitle(
    __('Historization status', 'carbon'),
    'fas fa-file-contract'
) }}

{% if not has_status %}
    {{ fields.smallTitle(__('No status', 'carbon')) }}
{% else %}
    {% set ok_field %}
        <div class="icons_block">
            <i class="fa fa-check-circle ok"><span class='sr-only'></span></i>
        </div>
    {% endset %}
    {% set nok_field %}
        <div class="icons_block">
            <i class="fa fa-xmark-circle disabled" title="{{ __('This data is missing and prevents from environmental impact calculation.', 'carbon') }}" data-bs-toggle="tooltip"><span class='sr-only'></span></i>
        </div>
    {% endset %}
    {% set warning_field %}
        <div class="icons_block">
            <i class="fa fa-xmark-circle missing"  title="{{ __('This data is missing and may reduce the quality of environmental impact calculation.', 'carbon') }}" data-bs-toggle="tooltip"><span class='sr-only'></span></i>
        </div>
    {% endset %}
    <div class="card-body d-flex flex-wrap">
        <div class="col-12 col-xxl-{{ (item_has_pictures ?? false) ? '9' : '12' }} flex-column">
            <div class="d-flex flex-row flex-wrap flex-xl-nowrap">
                <div class="row flex-row align-items-start flex-grow-1">
                    <div class="row flex-row">
                        {% if status.is_deleted is defined %}
                            {% set field = nok_field %}
                            {% if status.is_deleted %}
                                {% set field = ok_field %}
                            {% endif %}
                            {{ fields.field('', field, __('Is not in the trash bin', 'carbon')) }}
                        {% endif %}

                        {% if status.is_template is defined %}
                            {% set field = nok_field %}
                            {% if status.is_template %}
                                {% set field = ok_field %}
                            {% endif %}
                            {{ fields.field('', field, __('Is not a template', 'carbon')) }}
                        {% endif %}

                        {% if status.has_computer is defined %}
                            {% set field = nok_field %}
                            {% if status.has_computer %}
                                {% set field = ok_field %}
                            {% endif %}
                            {{ fields.field('', field, __('Linked to a computer', 'carbon')) }}
                        {% endif %}

                        {% if status.has_location is defined %}
                            {% set field = nok_field %}
                            {% if status.has_location %}
                                {% set field = ok_field %}
                            {% endif %}
                            {{ fields.field('', field, __('Has a location', 'carbon')) }}
                        {% endif %}

                        {% if status.has_state_or_country is defined %}
                            {% set field = nok_field %}
                            {% if status.has_state_or_country %}
                                {% set field = ok_field %}
                            {% endif %}
                            {{ fields.field('', field, __('The location has a state or a country', 'carbon')) }}
                        {% endif %}

                        {% if status.has_model is defined %}
                            {% set field = nok_field %}
                            {% if status.has_model %}
                                {% set field = ok_field %}
                            {% endif %}
                            {{ fields.field('', field, __('The asset has a model', 'carbon')) }}
                        {% endif %}

                        {% if status.has_model_power_consumption is defined %}
                            {% set field = nok_field %}
                            {% if status.has_type_power_consumption is defined %}
                                {% if status.has_type_power_consumption %}
                                    {% set field = warning_field %}
                                {% endif %}
                            {% endif %}
                            {% if status.has_model_power_consumption %}
                                {% set field = ok_field %}
                            {% endif %}
                            {{ fields.field('', field, __('The model has a power consumption', 'carbon')) }}
                        {% endif %}

                        {% if status.has_type is defined %}
                            {% set field = nok_field %}
                            {% if status.has_type %}
                                {% set field = ok_field %}
                            {% endif %}
                            {{ fields.field('', field, __('The asset has a type', 'carbon')) }}
                        {% endif %}

                        {% if status.has_type_power_consumption is defined %}
                            {% set field = nok_field %}
                            {% if status.has_model_power_consumption is defined %}
                                {% if status.has_model_power_consumption %}
                                    {% set field = warning_field %}
                                {% endif %}
                            {% endif %}
                            {% if status.has_type_power_consumption %}
                                {% set field = ok_field %}
                            {% endif %}
                            {{ fields.field('', field, __('The type has a power consumption', 'carbon')) }}
                        {% endif %}

                        {% if status.has_category is defined %}
                            {% set field = warning_field %}
                            {% if status.has_category %}
                                {% set field = ok_field %}
                            {% endif %}
                            {{ fields.field('', field, __('The asset has a category', 'carbon')) }}
                        {% endif %}

                        {% if status.has_usage_profile is defined %}
                            {% set field = nok_field %}
                            {% if status.has_usage_profile %}
                                {% set field = ok_field %}
                            {% endif %}
                            {{ fields.field('', field, __('The asset has a usage profile', 'carbon')) }}
                        {% endif %}

                        {% if status.has_inventory_entry_date is defined %}
                            {% set field = nok_field %}
                            {% if status.has_inventory_entry_date %}
                                {% set field = ok_field %}
                            {% endif %}
                            {{ fields.field('', field, __('The asset has an inventory entry date', 'carbon')) }}
                        {% endif %}

                        {{ fields.smallTitle(__('Legend', 'carbon')) }}

                        {{ fields.field('', ok_field, __('Satisfied requirement', 'carbon')) }}
                        {{ fields.field('', nok_field, __('Missing requirement', 'carbon')) }}
                        {{ fields.field('', warning_field, __('Optional missing data', 'carbon')) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endif %}
